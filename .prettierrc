{
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "singleAttributePerLine": false,
  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": true,
  "overrides": [
    {
      "files": ["*.scss", "*.sass"],
      "options": {
        "printWidth": 100,
        "singleQuote": false,
        "tabWidth": 2,
        "insertFinalNewline": true,
        "parser": "scss",
        "bracketSameLine": false,
        "semi": true,
        "proseWrap": "preserve"
      }
    },
    {
      "files": "*.css",
      "options": {
        "printWidth": 100,
        "singleQuote": false,
        "tabWidth": 2,
        "insertFinalNewline": true,
        "parser": "css",
        "semi": true,
        "proseWrap": "preserve"
      }
    },
    {
      "files": "*.vue",
      "options": {
        "printWidth": 120,
        "singleQuote": true,
        "semi": false
      }
    },
    {
      "files": "*.php",
      "options": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false
      }
    }
  ]
}